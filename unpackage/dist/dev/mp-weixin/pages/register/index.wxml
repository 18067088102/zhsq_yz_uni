<view class="login-container"><view class="phone-view common-view"><input class="login-input" data-id="phoneNo" type="number" maxlength="11" placeholder="请输入手机号" placeholder-class="placeholder" data-event-opts="{{[['input',[['getValue',['$event']]]],['blur',[['phoneNoBlur',['$event']]]]]}}" value="{{phoneNo}}" bindinput="__e" bindblur="__e"/></view><view class="vscode-view common-view"><input class="login-input" data-id="smsCode" maxlength="6" placeholder="输入验证码" placeholder-class="placeholder" data-event-opts="{{[['input',[['getValue',['$event']]]]]}}" value="{{smsCode}}" bindinput="__e"/><view class="line"></view><text data-event-opts="{{[['tap',[['onGetCode',['$event']]]]]}}" class="vscode-text" bindtap="__e">{{getCodeText}}</text></view><view class="vscode-view common-view"><input class="login-input" data-id="password" type="default" maxlength="20" placeholder="6-20位数字或字母组成的密码" placeholder-class="placeholder" password="{{!seePsw}}" data-event-opts="{{[['input',[['getValue',['$event']]]]]}}" value="{{password}}" bindinput="__e"/><view data-event-opts="{{[['tap',[['onSeePsw',['$event']]]]]}}" class="seePsw-view" bindtap="__e"><image class="seePsw-img" src="{{seePsw?'/static/common/notsee.png':'/static/common/see.png'}}"></image></view></view><button class="submit-btn" loading="{{isLoading}}" disabled="{{isDisable}}" data-event-opts="{{[['tap',[['submitHandler',['$event']]]]]}}" bindtap="__e">{{buttonText}}</button></view>