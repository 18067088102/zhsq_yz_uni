<view class="login-container"><view class="phone-view common-view"><input class="login-input" disabled="{{true}}" value="{{phoneNo}}"/></view><view class="phone-view common-view" style="margin-top:32rpx;"><input class="login-input" data-id="newPhoneNo" type="number" maxlength="11" placeholder="请输入新手机号" placeholder-class="placeholder" data-event-opts="{{[['input',[['getValue',['$event']]]],['blur',[['newPhoneNoBlur',['$event']]]]]}}" value="{{newPhoneNo}}" bindinput="__e" bindblur="__e"/></view><view class="vscode-view common-view"><input class="login-input" data-id="smsCode" maxlength="6" placeholder="输入验证码" placeholder-class="placeholder" data-event-opts="{{[['input',[['getValue',['$event']]]]]}}" value="{{smsCode}}" bindinput="__e"/><view class="line"></view><text data-event-opts="{{[['tap',[['onGetCode',['$event']]]]]}}" class="vscode-text" bindtap="__e">{{getCodeText}}</text></view><button class="submit-btn" loading="{{isLoading}}" disabled="{{isDisable}}" data-event-opts="{{[['tap',[['submitHandler',['$event']]]]]}}" bindtap="__e">{{buttonText}}</button></view>